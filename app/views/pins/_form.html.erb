<%= simple_form_for(@pin, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "altert alert-error" %>
  <%= f.full_error :image_content_type, class: "altert alert-error" %>

  <%= f.input :image, label: "Bild hochladen" %>
   <%= f.input :image_remote_url, label: "oder Eingabe einer URL" %>
  <%= f.input :description, as: :text, input_html: { rows: "3" }, label: "Beschreibung" %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
